#!/bin/bash

mydir=$(dirname $0)
if [ -h $0 ]; then
    mydir=$(dirname $(readlink -f $0))
fi

c=
o=
file=
for i in "$@"
do
    if [ "$i" = "-c" ]; then
        c=1
    elif [ "$i" = "-o" ]; then
        o=1
    elif [ -n "$o" ]; then
        o=
    elif [ -n "$c" ]; then
        file=$i
        break
    fi
done

ret=0
if [ -n "$file" ]; then
    $mydir/ast-matcher $RENAME_ARGS $file -- "$@"
    ret=$?
fi

# gbuild detected or error: no need to call the real compiler
if [ $ret -gt 0 -o -n "$COMPILER_EXTERNAL_TOOL" ]; then
    exit $ret
fi

exec "$@"

# vi:set shiftwidth=4 expandtab:
